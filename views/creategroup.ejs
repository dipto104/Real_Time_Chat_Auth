<style>
        #messagearea{
            
            border-style: solid;
            border-width: 5px;
            
        }
        #chat{
            overflow-y: auto;
            height: 400px;
            border-style: solid;
            border-width: 3px;
        }
        a:link{
            text-decoration: none;
        }
        a:hover{
             color: yellow;
             text-decoration: none;
              }
        a:visited 
        { 	color: blue;
            text-decoration: none;
        }
        
        a:active { 
            color: aqua;
            text-decoration: none;
        }			
    </style>
    <div id="messagearea" class="row">
        
        <div class="col-sm-3 col-md-3">
            <div class="card card-body bg-light">
                <h3>Online Users</h3>
                <ul class="list-group" id="users"></ul>
            </div>
            
        </div>
        <div class="col-sm-3 col-md-3">
                <div class="card card-body bg-light">
                    <h3>People List</h3>
                    <ul class="list-group" id="plist" ></ul>
                </div>
                <div>
                    <label>Enter Unique RoomID</label>
                    <input type="text" id="roomid" name="roomid" style="margin:5px;"/>
                </div>
                <div class="alert alert-danger" id="room_empty_alert" style="display: none">
                    <strong>Error!</strong> Room ID is Empty.
                  </div>
                  <div class="alert alert-danger" id="people_empty_alert" style="display: none">
                    <strong>Error!</strong> No People Selected.
                  </div>

                  <div class="alert alert-danger" id="roomnotavail" style="display: none">
                    Not available.
                  </div>

                  
                  <div class="alert alert-success" id="roomavail" style="display: none">
                    Available
                  </div>
                
               
                    
        </div>
        <div class="col-md-2">
            <div>
                <button class="btn btn-danger" id="clear" style="margin:5px;">Clear</button>
            </div>
                
            <div>
                <a href="#" class="btn btn-success" id="createroom" style="margin:5px;color: white;">Create</a>
            </div>
         </div>
        
        <div class="col-md-2">
            
                <h6 class="lead mb-3" id="userid"><%= name %></h6>
                <a href="/users/logout" class="btn btn-primary" style="margin:5px;color: white;">Logout</a>
                
            </div>
            
    </div>
    
    
    <script src="public/js/cgroupscript.js">
        
        
    </script>
    